#:kivy 2.0
<Button>:
    background_normal: ''
    background_down: ''
    background_color: (93/255, 164/255, 166/255, 1)
    color: (.01, .01, .01, 1)

    on_press:
        self.background_color = (109/255, 241/255, 216/255, 1)
    on_release:
        self.background_color = (93/255, 164/255, 166/255, 1)

<Field>:
    colors: [(0.722, 0.682, 0.784, 1), (0.235, 0.204, 0.361, 1)]
    background_down:''
    background_normal:''
    background_disabled_normal: ''
    background_disabled_down: ''

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: maze
            cols: 30
            rows: 25

        BoxLayout:
            id: footer
            orientation: 'horizontal'
            size_hint: (1.0, .05)
            padding: 1
            spacing: 1

            Button:
                text: "Solve"
                on_press:
                    root.solve()

            Button:
                text: "Properties"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = "properties"

<PropertiesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 1
        spacing: 1
        
        Button:
            text: "Set Start and end point"
            on_press:
                root.changeToMarkState()
                root.manager.transition.direction = 'right'
                root.manager.current = "menu"
        Button:
            text: "Reset"
            on_press:
                root.reset()
        Button:
            text: "Menu"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = "menu"